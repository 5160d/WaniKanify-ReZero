{
	"name": "wanikanify-rezero",
	"displayName": "WaniKanify ReZero",
	"version": "1.0.0",
	"description": "A tool to reinforce your WaniKani vocabulary.",
	"author": "5160d <5160d-dev@pm.me>",
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build",
		"package": "plasmo package",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:e2e": "playwright test",
		"build:all": "plasmo build --zip --target=chrome-mv3 && plasmo build --zip --target=firefox-mv3",
		"i18n:gen": "node scripts/generate-message-keys.cjs",
		"i18n:check": "node scripts/generate-message-keys.cjs --check",
		"dev:locales": "node scripts/copy-locales.cjs --watch",
		"i18n:dupes": "node scripts/check-duplicate-messages.cjs",
		"i18n:unused": "node scripts/find-unreferenced-locale-keys.cjs",
		"lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
		"lint:fix": "pnpm lint -- --fix",
		"prepare": "husky install",
		"lint:staged": "lint-staged"
	},
	"dependencies": {
		"@emotion/cache": "11.11.0",
		"@emotion/react": "11.11.4",
		"@emotion/styled": "11.11.5",
		"@mui/icons-material": "5.15.21",
		"@mui/material": "5.15.21",
		"fast-deep-equal": "3.1.3",
		"react": "18.3.1",
		"react-dom": "18.3.1"
	},
	"devDependencies": {
		"@babel/core": "7.26.0",
		"@ianvs/prettier-plugin-sort-imports": "4.4.0",
		"@plasmohq/storage": "1.15.0",
		"@playwright/test": "1.45.1",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "14.2.1",
		"@types/chrome": "0.0.280",
		"@types/jest": "29.5.12",
		"@types/node": "22.10.2",
		"@types/react": "18.3.17",
		"@types/react-dom": "18.3.5",
		"@typescript-eslint/eslint-plugin": "8.9.0",
		"@typescript-eslint/parser": "8.9.0",
		"autoprefixer": "10.4.20",
		"eslint": "9.11.1",
		"eslint-plugin-react-hooks": "5.2.0",
		"husky": "9.1.6",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.10",
		"plasmo": "0.90.5",
		"postcss": "8.5.1",
		"prettier": "3.4.2",
		"tailwindcss": "3.4.17",
		"ts-jest": "29.2.5",
		"ts-node": "10.9.2",
		"typescript": "5.7.2"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"eslint --max-warnings=0"
		],
		"locales/en/messages.json": [
			"node scripts/generate-message-keys.cjs --check"
		]
	},
	"manifest": {
		"default_locale": "en",
		"name": "__MSG_extension_name__",
		"description": "__MSG_extension_description__",
		"short_name": "__MSG_extension_short_name__",
		"permissions": [
			"storage",
			"activeTab",
			"alarms"
		],
		"web_accessible_resources": [
			{
				"resources": [
					"assets/popup_background.png"
				],
				"matches": [
					"<all_urls>"
				]
			}
		],
		"host_permissions": [
			"https://*/*"
		],
		"action": {
			"default_title": "__MSG_extension_name__",
			"default_popup": "popup.html"
		},
		"browser_specific_settings": {
			"gecko": {
				"id": "{5463b340-00a7-4cd1-b5d4-09503e6c2ac3}",
				"strict_min_version": "115.0"
			}
		}
	}
}